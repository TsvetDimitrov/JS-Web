<main>
    <h1 class="text-center">Courses</h1>
    <section>
        <a href="/courses/create" class="btn btn-warning ">Create Course</a>
        <form class="search float-right" action="/search" method="GET">
            <label>Search: </label>
            <input type="text" name="searchText" value={{searchText}}>
            <input type="submit" class="btn btn-primary" value="Search" href="/search">
        </form>
    </section>
    {{#if courses}}
    <div class="container mt-3">
        <div class="row ">
            <div class="card-deck d-flex justify-content-center">
                {{#each courses}}
                {{>course}}
                {{/each}}
            </div>
        </div>
    </div>
    {{else}}
    <h3 class="text-center">No courses...</h3>
    {{/if}}
</main>